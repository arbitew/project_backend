<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/index.css">
    <title>{{ title }}</title>
</head>
<body>
    <div>{{name}}</div>
<div>{{id}}</div>
<div>{{group_name}}</div>
{{#if all_tasks.length}}

{{#each all_tasks}}
{{!-- show each todos from db --}}
<li class="todo">
    <form action="/save_tasks" method="POST">
        <label>
            {{#if completed}}
            {{else}}
            <input type="checkbox" name="completed">
            <span>{{task}}</span>
            <input type="hidden" value="{{_id}}" name="id_task">
            <input type="hidden" value="{{../name}}" name="name">
            <input type="hidden" value="{{../password}}" name="password">
            <input type="hidden" value="{{../id_group}}" name="id_group">
            <button class="btn btn-small" type="submit">Save</button>
            {{/if}}
        </label>
    </form>
</li>
{{/each}}

{{else}}
<p>No tasks!</p>
{{/if}}
</body>

</html>