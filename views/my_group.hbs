<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/my_group.css">
    <title>{{ title }}</title>
</head>
<body>
    <div class="container">
        <div class="bar">
            <a href="/sign_in"> <img class = "icons" src="images/icons8-exit-100.png" width="70px"> </a>
            
        </div>
            <div class="character_box">
                <div class = "tasText">MY TASKS</div>
                <div class = "tasText">Group: {{group_name}}</div>
                {{!-- <div>{{id}}</div> --}}
                {{!-- <div>{{group_name}}</div> --}}
                <br>
                <form action="/new_task" method="POST">
                    <label>
                        <input id = "groupInput" name="new_task" placeholder="Enter task">
                        <input type="hidden" name="id_group" value={{id_group}}>
                        <input type="hidden" name="name" value={{name}}>
                        <input type="hidden" name="password" value={{password}}>
                        <button class="btn-hover color-7" type="submit">Create</button>
                    </label>
                </form>
                {{#if all_tasks.length}}

                {{#each all_tasks}}
                {{!-- show each todos from db --}}
                <li class="todo">
                    <form action="/save_tasks" method="POST">
                        <label>
                            {{#if completed}}
                            {{else}}
                            <input type="checkbox" name="completed">
                            <span class="taskTe">{{task}}</span>
                            <input type="hidden" value="{{_id}}" name="id_task">
                            <input type="hidden" value="{{../name}}" name="name">
                            <input type="hidden" value="{{../password}}" name="password">
                            <input type="hidden" value="{{../id_group}}" name="id_group">
                            <button class="btn-hover color-7" type="submit">Save</button>
                            {{/if}}
                        </label>
                    </form>
                </li>
                {{/each}}

                {{else}}
                <p>No tasks!</p>
                {{/if}}
            </div>
    </div>
</body>

</html>